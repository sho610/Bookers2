<% if flash[:notice]%>
  <div class="flash">
    <%= flash[:notice]%>
  </div>
<%end%>
<P id ="notice"></P>

<div class="container px-5 px-sm-0">

  <div class="row">

    <div class = "col-md-3">
      <%= render 'books/list', book: @book ,user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
      <table class= "table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image,:fill,60,60, fallback: "no_image.jpg"%><br />
                <%= @user.name %>
              <%end%>
            </td>

            <td>
              <%= link_to  @book_id.title ,  book_path(@book_id.id)  %>
            </td>

            <td>
              <%= @book_id.body %>
            </td>
            <% if @book_id.user == current_user %>
              <td>
                <%= link_to "Edit" ,edit_book_path(@book_id),class:"btn btn-sm btn-success"%>
              </td>
              <td>
                <%= link_to "Destroy",book_path(@book_id), method: :delete, class:"btn btn-sm btn-danger", "date-confirm"=>"本当に消しますか?" %>
              </td>
            <%end%>
          </tr>
        </tbody>
      </table>
    </div>
  </div>