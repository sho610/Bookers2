<div class="container px-5 px-sm-0">

  <div class ="error_explanation">
    <% if @user.errors.any? %>
      <h3><%= pluralize(@user.errors.count,"error") %> prohibited this book from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message|%>
          <li><%=message %></li>
        <%end%>
      </ul>
    <%end%>
  </div>

  <div class="row">

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      <%= form_with model:@user,local:true do |f| %>

        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name , autofocus: true, class:"form-control name" ,id:"user_name"%>
        </div>

        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image ,id:"user_profile_image",class:"form-control-file user_image" %>
        </div>

        <div class="form-group">
          <label for "user_introduction">introduction</label>
          <%= f.text_area :introduction , autofocus: true, id:"user_introduction",class:"form-control introduction"%>
        </div>

        <div class="form-group">
          <%=f.submit "Update User" , class:"btn btn-secondary" %>
        </div>
      <%end%>
    </div>
  </div>
</div>